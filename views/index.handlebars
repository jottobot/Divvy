    {{!-- ADD A BILL CARD --}}
    <div class="card" id="addbillcard">
      <div class="card-body-addbill">
        Add a bill,
      </div>
      <div class="username"></div>
      <hr>
      <div class="row">
        <div class="col-md-3">
          <div class="form-group">
            <label for="formGroupExampleInput" class="formlabel">Bill</label>
            <input type="text" class="form-control" id="inputbill" placeholder="Enter bill title" required>
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2" class="formlabel">Bill company</label>
            <input type="text" class="form-control" id="inputcompany" placeholder="Enter bill company" required>
          </div>
          <div class="form-group">
            <label for="formGroupExampleInput2" class="formlabel">Bill total</label>
            <input type="number" class="form-control" id="inputprice" placeholder="Enter bill price" required>
          </div>


        </div>

        <div class="col-md-6">
          <img src="images/bill-image.png" id="billspic" alt="bills" width="300" height="300">
        </div>

        <div class="col-md-3">
          <div class="form-group">
            <label for="formGroupExampleInput2" class="formlabel">Portion owed</label>
            <input type="number" class="form-control" id="price-you-owe" placeholder="Enter amount you owe" required>
          </div>
          <form action="/action_page.php" method="get">
            <h5 class="paidyet">Been paid?</h5>
            <hr>
            <input type="radio" name="bill" value="true" class="paid"> Bill is paid<br>
            <input type="radio" name="bill" value="false" class="paid" checked> Bill is unpaid<br>
          </form>
        </div>
        {{!-- end of row --}}
      </div>
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <button type="submit" class="btn btn-dark" id="addbillsubmit">Create Bill</button>
        </div>
        <div class="col-md-3"></div>
      </div>
