          <form id="signupform">
            <center>
              <div class="signupform">
                <h1 class="signuptitle">Sign up</h1>
                <label for="name" class="signupfirstname"><b>First Name</b></label>
                <input type="text" id="signupfirstname" placeholder="Your name" name="name" required>

                <label for="name" class="signuplastname"><b>Last Name</b></label>
                <input type="text" id="signuplastname" placeholder="Your name" name="name" required>

                <label for="email" class="signupemail"><b>Email</b></label>
                <input type="text" id="signupemail" placeholder="Your email" name="email" required>

                <label for="phone" class="signupphone"><b>Phone</b></label>
                <input type="text" id="signupphone" placeholder="Your phone number" name="phone" required>

                <label for="password" class="signuppassword"><b>Password</b></label>
